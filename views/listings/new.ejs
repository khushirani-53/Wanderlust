<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>create a new listing</h3>
            <br>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">title</lable>
                    <input name="listing[title]" type="text" placeholder="enter title" class="form-control" required>
                    <div class="valid-feedback">title look good!</div>
                </div>

                <div class="mb-3">
                    <lable for="description" class="form-label">description</lable>
                    <textarea name="listing[description]" placeholder=" enter description"
                        class="form-control" required></textarea>
                        <div class="invalid-feedback">enter description</div>
                </div>
<!-- 
                <div class="mb-3">
                    <lable for="image" class="form-label">image Link</lable>
                    <input name="listing[image]" type="text" placeholder="enter image URL/Link" class="form-control">
                </div> -->
                <div class="mb-3">
                    <lable for="image" class="form-label"> Upload Listing Image</lable>
                    <input name="listing[image]" type="file" class="form-control" required>
                    
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">price</lable>
                        <input name="listing[price]" placeholder="enter price" class="form-control" required>
                        <div class="invalid-feedback">enter valid price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <lable for="location" class="form-label">location</lable>
                        <input name="listing[location]" type="text" placeholder="enter location" class="form-control" required>
                        <div class="invalid-feedback">enter location</div>
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="country" class="form-label">country</lable>
                    <input name="listing[country]" type="text" placeholder="enter country name" class="form-control" required>
                    <div class="invalid-feedback">enter country</div>
                </div>
                <br><br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>